<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    Event Details
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @event.title%></h5>
    <p class="card-text"><%= @event.description%></p>
  </div>
</div>
<p><b>Owner:</b>  <%= @event.owner.name%></p>
<p><b>Event Type:</b>  <%= @event.event_type%></p>
<p><b>Event Status:</b>  <%if active? @event%>
           Active
          <%else%>
          InActive
          <%end%></p>
<p><b>Event Start Date:</b>  <%= @event.start_at.strftime("%B %d, %Y")%></p>
<p><b>Event End Date:</b>  <%= @event.end_at.strftime("%B %d, %Y")%></p>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
